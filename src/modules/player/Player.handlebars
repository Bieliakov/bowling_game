
<tr class="resultTable__row" data-name="">
    <td class="resultTable__cell" rowspan="2">
        <span class="resultTable__editable is-name" contenteditable>{{name}}</span>
    </td>
    {{#each points}}
        <td class="resultTable__cell">
            <input  type="text"
                    id="{{../name}}frame{{@index}}first"
                    class="resultTable__editable is-result"
                    data-model="{{../name}}"
                    data-currentFrame="{{@index}}"
                    data-position="first"
                    data-editable-result="true"
                    value="{{first}}"
                    maxlength="1"
                    readonly
            />
        </td>
        <td class="resultTable__cell">
            <input  type="text"
                    id="{{../name}}frame{{@index}}second"
                    class="resultTable__editable is-result is-last-result"
                    data-model="{{../name}}"
                    data-currentFrame="{{@index}}"
                    data-position="second"
                    data-editable-result="true"
                    value="{{second}}"
                    maxlength="1"
                    readonly
            />
        </td>
        {{#if lastFrame}}
            <td class="resultTable__cell">
                <input  type="text"
                        id="{{../name}}frame{{@index}}last"
                        class="resultTable__editable is-result is-last-result"
                        data-model="{{../name}}"
                        data-currentFrame="{{@index}}"
                        data-position="second"
                        data-editable-result="true"
                        value="{{second}}"
                        maxlength="1"
                        readonly
                        />
            </td>
        {{/if}}
    {{/each}}
    <td class="resultTable__cell" rowspan="2">
        <span id="{{name}}playerTotal">{{total}}</span>
    </td>
</tr>

<tr class="resultTable__row" id="{{name}}FrameTotal">
    {{#each points}}
        {{#if lastFrame}}
            <td class="resultTable__cell" colspan="3">
                <input  type="text"
                        class="resultTable__editable is-result is-last-result"
                        data-model="{{../name}}"
                        data-currentFrame="{{@index}}"
                        data-position="second"
                        data-editable-result="true"
                        value="{{frameTotal}}"
                        maxlength="1"
                        readonly
                />
            </td>
        {{else}}
            <td class="resultTable__cell" colspan="2">
                <input  type="text"
                        class="resultTable__editable is-result is-last-result"
                        data-model="{{../name}}"
                        data-currentFrame="{{@index}}"
                        data-position="second"
                        data-editable-result="true"
                        value="{{frameTotal}}"
                        maxlength="1"
                        readonly
                        />
            </td>
        {{/if}}
    {{/each}}
</tr>